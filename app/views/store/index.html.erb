<div class="w-full">
  
  <%= render 'notice' %>

  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    <%= t('.title_html') %>
  </h1>

  <div class="flex flex-col items-center">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :title_cont,placeholder: "Search", class: "rounded-lg" %>
    <%= f.submit "Search", class: "rounded-full p-2 bg-green-600 inline-block font-medium" %>
  </div>
  <% end %>

  <%= turbo_stream_from 'products' %>
  
  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
  <%= paginate @products %>
</div>
